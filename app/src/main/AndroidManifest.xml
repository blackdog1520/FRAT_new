<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qrcodescanner">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity_Overall" android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".IntroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".facerec" />
        <activity android:name=".ShowUserAttActivity" />
        <activity android:name=".ShowOverallActivity" />
        <activity
            android:name=".ShowAttendanceDateActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".StartActivity" />
        <activity android:name=".EditProfileActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".SetupActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MarkAttendenceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>